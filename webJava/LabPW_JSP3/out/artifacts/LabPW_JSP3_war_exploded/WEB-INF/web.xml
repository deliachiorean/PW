<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegexController</servlet-name>
        <servlet-class>controller.RegexController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegexController</servlet-name>
        <url-pattern>/RegexController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FilterController</servlet-name>
        <servlet-class>controller.FilterController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FilterController</servlet-name>
        <url-pattern>/FilterController</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>MyFilter</filter-name>
        <filter-class>model.MyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>